{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "user",
      "title"
    ],
    "properties": {
      "user": {
        "bsonType": "objectId",
        "description": "user id from users collection"
      },
      "title": {
        "bsonType": "string"
      },
      "videoDescription": {
        "bsonType": "string"
      },
      "videoSize": {
        "bsonType": "long"
      },
      "filename": {
        "bsonType": "string"
      },
      "videoLength": {
        "bsonType": "int"
      },
      "thumbnail": {
        "bsonType": "binData"
      },
      "status": {
        "bsonType": "string",
        "enum": [
          "public",
          "private",
          "hidden"
        ]
      },
      "videosTags": {
        "bsonType": "array",
        "description" : "array of strings"
      },
      "creationDate": {
        "bsonType": "timestamp"
      },
      "viewsCount": {
        "bsonType": "int",
        "description": "Number of views, incremented at every video display"
      },
      "likesCount": {
        "bsonType": "int",
        "description": "Number of likes, incremented with each like"
      },
      "dislikesCount": {
        "bsonType": "int",
        "description": "Number of likes, incremented with each dislike"
      }
    }
  }
}